{% extends 'base.html.twig' %}

{% block title %}Edit Supervision Session{% endblock %}

{% block body %}
	<div class="container mt-4">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card">
					<div class="card-header">
						<h3 class="card-title mb-0">
							<i class="fas fa-edit"></i>
							Edit Supervision Session
						</h3>
					</div>
					<div class="card-body">
						{{ form_start(form) }}
						<div class="row">
							<div class="col-md-6 mb-3">
								{{ form_row(form.date) }}
							</div>
							<div class="col-md-6 mb-3">
								{{ form_row(form.Student, {'attr': {'disabled': 'disabled'}}) }}
							</div>
						</div>
						<div class="row">
							<div class="col-md-12 mb-3">
								{{ form_row(form.Supervisor, {'attr': {'disabled': 'disabled'}}) }}
							</div>
						</div>
						<div class="row">
							<div class="col-md-12 mb-3">
								{{ form_row(form.commentaire, {
                                    'attr': {
                                        'class': 'form-control',
                                        'rows': 6,
                                        'placeholder': 'Update your comments about the session...'
                                    }
                                }) }}
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="col-md-12 d-flex gap-2">
									{{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

									<a href="{{ path('seance_show', {'id': seance.id}) }}" class="btn btn-info">
										<i class="fas fa-eye"></i> View
									</a>

									<a href="{{ path('seance_index') }}" class="btn btn-secondary">
										<i class="fas fa-arrow-left"></i> Back
									</a>
								</div>
							</div>
						</div>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
