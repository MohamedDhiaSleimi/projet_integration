{# templates/admin/assign_supervisors.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Assign Supervisors
{% endblock %}

{% block body %}
	<h1 class="mb-4">Assign Supervisors to Internships</h1>

	{% if applications is empty %}
		<div class="alert alert-info">
			No accepted applications currently need supervisor assignment.
		</div>
	{% else %}
		<div class="table-responsive">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Student</th>
						<th>Company</th>
						<th>Internship Title</th>
						<th>Status</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for application in applications %}
						<tr>
							<td>
								<strong>{{ application.student.name }}</strong><br>
								<small>{{ application.student.university }}</small>
							</td>
							<td>{{ application.internshipOffer.company.name }}</td>
							<td>{{ application.internshipOffer.title }}</td>
							<td>
								<span class="badge bg-success">Accepted</span>
							</td>
							<td>
								<a href="{{ path('app_admin_assign_supervisor', {'id': application.id}) }}" class="btn btn-sm btn-primary">Assign Supervisor</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	{% endif %}
{% endblock %}
