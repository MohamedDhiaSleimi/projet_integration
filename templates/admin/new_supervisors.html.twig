{# templates/admin/new_supervisor.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Add New Supervisor
{% endblock %}

{% block body %}
	<div class="mb-4">
		<a href="{{ path('app_admin_supervisors') }}" class="btn btn-sm btn-outline-secondary">
			<i class="bi bi-arrow-left"></i>
			Back to supervisors
		</a>
	</div>

	<div class="card">
		<div class="card-header">
			<h2 class="card-title mb-0">Add New Supervisor</h2>
		</div>
		<div class="card-body">
			{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
			<div class="mb-3">
				{{ form_label(form.name) }}
				{{ form_widget(form.name, {'attr': {'class': 'form-control' ~ (form.name.vars.valid ? '' : ' is-invalid')}}) }}
				{{ form_errors(form.name) }}
			</div>

			<div class="mb-3">
				{{ form_label(form.email) }}
				{{ form_widget(form.email, {'attr': {'class': 'form-control' ~ (form.email.vars.valid ? '' : ' is-invalid')}}) }}
				{{ form_errors(form.email) }}
			</div>

			<div class="mb-3">
				{{ form_label(form.department) }}
				{{ form_widget(form.department, {'attr': {'class': 'form-control' ~ (form.department.vars.valid ? '' : ' is-invalid')}}) }}
				{{ form_errors(form.department) }}
			</div>

			<div class="mb-3">
				{{ form_label(form.phoneNumber) }}
				{{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control' ~ (form.phoneNumber.vars.valid ? '' : ' is-invalid')}}) }}
				{{ form_errors(form.phoneNumber) }}
			</div>

			<div class="text-center">
				<button type="submit" class="btn btn-primary">Add Supervisor</button>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
