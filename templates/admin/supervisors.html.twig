{# templates/admin/supervisors.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Manage Supervisors
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-between align-items-center mb-4">
		<h1>College Supervisors</h1>
		<a href="{{ path('app_admin_new_supervisor') }}" class="btn btn-primary">Add New Supervisor</a>
	</div>

	{% if supervisors is empty %}
		<div class="alert alert-info">
			No supervisors have been added yet.
			<a href="{{ path('app_admin_new_supervisor') }}">Add your first supervisor</a>.
		</div>
	{% else %}
		<div class="table-responsive">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Name</th>
						<th>Email</th>
						<th>Department</th>
						<th>Phone Number</th>
						<th>Assigned Internships</th>
					</tr>
				</thead>
				<tbody>
					{% for supervisor in supervisors %}
						<tr>
							<td>{{ supervisor.name }}</td>
							<td>{{ supervisor.email }}</td>
							<td>{{ supervisor.department }}</td>
							<td>{{ supervisor.phoneNumber }}</td>
							<td>
								<span class="badge bg-secondary">{{ supervisor.applications|length }}</span>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	{% endif %}
{% endblock %}
