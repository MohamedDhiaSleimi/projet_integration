{% extends 'base.html.twig' %}

{% block title %}Assign Supervisor{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Assign Supervisor to Internship</h1>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Internship Details</h5>
                <p><strong>Student:</strong> {{ application.student.name }}</p>
                <p><strong>Company:</strong> {{ application.internshipOffer.company.name }}</p>
                <p><strong>Internship Title:</strong> {{ application.internshipOffer.title }}</p>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary">Assign Supervisor</button>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_admin_assign_supervisors') }}" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
{% endblock %} 