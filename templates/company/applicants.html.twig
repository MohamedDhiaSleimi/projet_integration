{# templates/company/applicants.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Applicants for {{ offer.title }}{% endblock %}

{% block body %}
<div class="mb-4">
    <a href="{{ path('app_company_offers') }}" class="btn btn-sm btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to my offers
    </a>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h2 class="card-title mb-0">{{ offer.title }}</h2>
    </div>
    <div class="card-body">
        <p><strong>Location:</strong> {{ offer.location }}</p>
        <p><strong>Duration:</strong> {{ offer.duration }}</p>
        <p><strong>Posted on:</strong> {{ offer.createdAt|date('d M Y') }}</p>
    </div>
</div>

<h3 class="mb-4">Applicants ({{ applications|length }})</h3>

{% if applications is empty %}
    <div class="alert alert-info">
        No applications have been received yet for this internship offer.
    </div>
{% else %}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Student Name</th>
                    <th>University</th>
                    <th>Field of Study</th>
                    <th>Applied On</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for application in applications %}
                    <tr>
                        <td>{{ application.student.name }}</td>
                        <td>{{ application.student.university }}</td>
                        <td>{{ application.student.fieldOfStudy }}</td>
                        <td>{{ application.appliedAt|date('d M Y') }}</td>
                        <td>
                            {% if application.status == 'pending' %}
                                <span class="badge bg-warning text-dark">Pending</span>
                            {% elseif application.status == 'accepted' %}
                                <span class="badge bg-success">Accepted</span>
                            {% elseif application.status == 'rejected' %}
                                <span class="badge bg-danger">Rejected</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if application.status == 'pending' %}
                                <div class="btn-group btn-group-sm">
                                    <a href="{{ path('app_company_accept_application', {'id': application.id}) }}" class="btn btn-outline-success">Accept</a>
                                    <a href="{{ path('app_company_reject_application', {'id': application.id}) }}" class="btn btn-outline-danger">Reject</a>
                                </div>
                            {% elseif application.status == 'accepted' %}
                                {% if application.supervisor %}
                                    <span class="badge bg-info">Supervisor: {{ application.supervisor.name }}</span>
                                {% else %}
                                    <span class="badge bg-secondary">Awaiting Supervisor Assignment</span>
                                {% endif %}
                            {% else %}
                                <span class="text-muted">N/A</span>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endif %}
{% endblock %}