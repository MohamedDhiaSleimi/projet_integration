{% extends 'base.html.twig' %}

{% block body %}
	<h1>My CV</h1>

	<form method="POST" enctype="multipart/form-data">
		<div class="mb-3">
			<label for="cv_pdf" class="form-label">Upload CV (PDF)</label>
			<input type="file" name="cv_pdf" id="cv_pdf" class="form-control" accept="application/pdf" required>
		</div>
		<button type="submit" class="btn btn-primary">Upload / Replace</button>
	</form>

	{% if cv %}
		<hr>
		<h2>Preview</h2>
		<iframe src="{{ asset('uploads/cvs/' ~ cv.filename) }}" width="100%" height="600px" style="border:1px solid #ccc;"></iframe>
	{% endif %}
{% endblock %}
