{% extends 'base.html.twig' %}

{% block title %}Nouveau CV{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>Cr√©er mon CV</h1>

            {{ form_start(form) }}
                <div class="card">
                    <div class="card-body">
                        {{ form_row(form.title) }}
                        {{ form_row(form.description) }}
                        {{ form_row(form.skills) }}
                        {{ form_row(form.education) }}
                        {{ form_row(form.experience) }}
                        {{ form_row(form.languages) }}

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                            <a href="{{ path('app_cv_index') }}" class="btn btn-secondary">Retour</a>
                        </div>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %} 