<h2>View Student CV</h2>

{% if cv.filePath %}
	<embed src="{{ asset('uploads/cvs/' ~ cv.filePath) }}" type="application/pdf" width="100%" height="700px"/>
	<div class="mt-3">
		<a href="{{ path('app_cv_download', {'id': cv.id}) }}" class="btn btn-success">
			Download CV
		</a>
	</div>
{% else %}
	<p>This student has not uploaded a CV yet.</p>
{% endif %}
<a href="{{ app.request.headers.get('referer') ?: path('app_company_offers') }}" class="btn btn-outline-secondary mb-3">
	<i class="bi bi-arrow-left"></i>
	Go Back
</a>
