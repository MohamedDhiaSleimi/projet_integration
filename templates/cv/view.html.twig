{% extends 'base.html.twig' %}

{% block title %}CV de {{ cv.student.name }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h1>CV de {{ cv.student.name }}</h1>
                </div>
                <div class="card-body">
                    <h2 class="card-title">{{ cv.title }}</h2>
                    
                    <div class="mb-4">
                        <h3>Description</h3>
                        <p>{{ cv.description }}</p>
                    </div>

                    <div class="mb-4">
                        <h3>Compétences</h3>
                        <p>{{ cv.skills }}</p>
                    </div>

                    <div class="mb-4">
                        <h3>Formation</h3>
                        <p>{{ cv.education }}</p>
                    </div>

                    {% if cv.experience %}
                        <div class="mb-4">
                            <h3>Expérience</h3>
                            <p>{{ cv.experience }}</p>
                        </div>
                    {% endif %}

                    {% if cv.languages %}
                        <div class="mb-4">
                            <h3>Langues</h3>
                            <p>{{ cv.languages }}</p>
                        </div>
                    {% endif %}

                    <div class="mt-4">
                        <a href="javascript:history.back()" class="btn btn-secondary">Retour</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 