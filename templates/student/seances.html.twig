{% extends 'base.html.twig' %}

{% block title %}My Supervision Sessions{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1 class="mb-4">My Supervision Sessions</h1>

		<div class="mb-4">
			<a href="{{ path('app_student_dashboard') }}" class="btn btn-outline-secondary btn-sm">
				<i class="bi bi-arrow-left"></i>
				Back to My Dashboard
			</a>
		</div>

		<h2>Past Sessions</h2>
		{% if seances_passees is empty %}
			<div class="alert alert-info">You have no past sessions.</div>
		{% else %}
			<table class="table table-striped">
				<thead>
					<tr>
						<th scope="col">Date</th>
						<th scope="col">Supervisor</th>
						<th scope="col">Comments</th>
					</tr>
				</thead>
				<tbody>
					{% for seance in seances_passees %}
						<tr>
							<td>{{ seance.date|date('Y-m-d H:i') }}</td>
							<td>{{ seance.supervisor.name }}</td>
							<td>{{ seance.commentaire }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		{% endif %}

		<h2>Upcoming Sessions</h2>
		{% if seances_futures is empty %}
			<div class="alert alert-info">You have no upcoming sessions.</div>
		{% else %}
			<table class="table table-striped">
				<thead>
					<tr>
						<th scope="col">Date</th>
						<th scope="col">Supervisor</th>
					</tr>
				</thead>
				<tbody>
					{% for seance in seances_futures %}
						<tr>
							<td>{{ seance.date|date('Y-m-d H:i') }}</td>
							<td>{{ seance.supervisor.name }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		{% endif %}
	</div>
{% endblock %}
