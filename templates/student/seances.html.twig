{% extends 'base.html.twig' %}

{% block title %}My Supervision Sessions
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1 class="mb-4">My Supervision Sessions</h1>
		<div class="mb-4">
			<a href="{{ path('app_student_dashboard') }}" class="btn btn-outline-secondary btn-sm">
				<i class="bi bi-arrow-left"></i>
				Back to My Dashboard
			</a>
		</div>
		<h2>Past Sessions</h2>
		{% if seances_passees is empty %}
			<p>You have no past sessions.</p>
		{% else %}
			<ul>
				{% for seance in seances_passees %}
					<li>
						<a href="{{ path('student_seance_details', {'id': seance.id}) }}">{{ seance.date|date('Y-m-d H:i') }}
							-
							{{ seance.supervisor.name }}</a>
					</li>
				{% endfor %}
			</ul>
		{% endif %}

		<h2>Upcoming Sessions</h2>
		{% if seances_futures is empty %}
			<p>You have no upcoming sessions.</p>
		{% else %}
			<ul>
				{% for seance in seances_futures %}
					<li>
						<a href="{{ path('student_seance_details', {'id': seance.id}) }}">{{ seance.date|date('Y-m-d H:i') }}
							-
							{{ seance.supervisor.name }}</a>
					</li>
				{% endfor %}
			</ul>
		{% endif %}
	</div>
{% endblock %}
