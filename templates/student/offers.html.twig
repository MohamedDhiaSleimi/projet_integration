{# templates/student/offers.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Internship Offers
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1 class="mb-4">Available Internship Offers</h1>
		<div class="mb-4">
			<a href="{{ path('app_student_dashboard') }}" class="btn btn-outline-secondary btn-sm">
				<i class="bi bi-arrow-left"></i>
				Back to My Dashboard
			</a>
		</div>
		{% if offers is empty %}
			<div class="alert alert-info">
				No internship offers available at the moment. Please check back later.
			</div>
		{% else %}
			<div class="row row-cols-1 row-cols-md-2 g-4">
				{% for offer in offers %}
					<div class="col">
						<div class="card h-100">
							<div class="card-body">
								<h5 class="card-title">{{ offer.title }}</h5>
								<h6 class="card-subtitle mb-2 text-muted">{{ offer.company.name }}
									-
									{{ offer.location }}</h6>
								<p class="card-text">{{ offer.description|u.truncate(150, '...') }}</p>
								<div class="d-flex justify-content-between align-items-center">
									<small class="text-muted">Duration:
										{{ offer.duration }}</small>
									<small class="text-muted">Posted on:
										{{ offer.createdAt|date('d M Y') }}</small>
								</div>
							</div>
							<div class="card-footer bg-transparent">
								<a href="{{ path('app_student_offer_details', {'id': offer.id}) }}" class="btn btn-sm btn-primary">View Details</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		{% endif %}
	</div>
{% endblock %}
